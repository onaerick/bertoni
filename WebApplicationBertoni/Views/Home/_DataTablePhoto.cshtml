@model IEnumerable<WebApplicationBertoni.ViewModels.GridViewModel>

<table class="table table-striped table-bordered dt-responsive nowrap" id="dtPhoto">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UrlImage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.Title)</td>
            <td><img class="img" src="@Url.Content(item.UrlImage)" /> </td>
            <td><a href='#' class='btn btn-info' onclick=ShowComment(@item.Id);>Comments</a></td>
        </tr>
        }
    </tbody>
</table>

<script type="text/javascript">
    $("document").ready(function () {
        $('#dtPhoto').DataTable();
    });
</script>

